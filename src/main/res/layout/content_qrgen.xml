<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".QRGen"
    tools:showIn="@layout/app_bar_qrgen">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp"
        android:gravity="center"
        android:transitionName="t2"
        android:text="Class"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/main_selector"
        android:transitionName="e1"
        android:layout_alignStart="@+id/spinner5"
        android:layout_alignEnd="@+id/spinner5"
        android:layout_alignTop="@+id/textView2"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="170dp"
        android:layout_height="50dp"

        android:layout_below="@+id/textView2"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:transitionName="t3"
        android:text="Semester"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/spinner5"
        android:background="@drawable/main_selector"
        android:layout_alignTop="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="170dp"
        android:layout_height="50dp"
    android:layout_marginTop="10dp"
       android:layout_below="@id/textView3"
        android:gravity="center"
        android:transitionName="t4"
        android:text="Division"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:transitionName="spin2"
        android:layout_alignStart="@+id/spinner5"
        android:background="@drawable/main_selector"

        android:layout_alignTop="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/spinner5"
        android:gravity="center"
        android:transitionName="t1"
        android:text="Department"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:transitionName="spin1"
        android:background="@drawable/main_selector"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="38dp" />

</RelativeLayout>