<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".collegeVerification"
    tools:showIn="@layout/activity_college_verification">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editD1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="41dp">

        <EditText
            android:id="@+id/editText5"
            android:layout_width="308dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/editD1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:ems="10"

            android:hint="College Name"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editD2"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginStart="21dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp">

        <EditText
            android:id="@+id/editText7"
            android:layout_width="309dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editD2"
            android:layout_alignStart="@+id/editD2"
            android:layout_alignTop="@+id/editD2"

            android:layout_alignEnd="@+id/editD2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Please Enter Valid College Domain"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="278dp"
        android:layout_height="132dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="171dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:text="Enter the Code"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView17"
                android:ems="10"
                android:inputType="number" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>